apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: calibre
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: calibre
    spec:
      containers:
      - name: calibre
        image: regueiro/calibre-server
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
        env:
        - name: PGID
          value: "1000"
        - name: PUID
          value: "1000"
        - name: CALIBRE_PORT
          value: "8083"
        volumeMounts:
        - name: calibre
          mountPath: /config
          subPath: docker/calibre
        - name: calibre
          mountPath: /download_books2
          subPath: Ebooks_tmp
        - name: calibre
          mountPath: /download_books
          subPath: downloads/Books
        - name: calibre
          mountPath: /opt/calibre/library
          subPath: Ebooks
      volumes:
      - name: calibre
        glusterfs:
          endpoints: glusterfs-cluster
          path: data
          readOnly: false
